<resources>
    <style name="Theme.JakartaVaxAvailability" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status and Navigation bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white100</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_content</item>
        <item name="postSplashScreenTheme">@style/Theme.JakartaVaxAvailability</item>
    </style>
</resources>